<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.testbckg.presentation.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main"/>
    <fragment
        android:id="@+id/logInFragment"
        android:name="com.example.testbckg.presentation.auth.login.LogInFragment"
        android:label="fragment_log_in"
        tools:layout="@layout/fragment_log_in">
        <action
            android:id="@+id/action_logInFragment_to_signUpUserBottomSheetFragment"
            app:destination="@id/signUpUserBottomSheetFragment" />
        <action
            android:id="@+id/action_logInFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

    <dialog
        android:id="@+id/signUpUserBottomSheetFragment"
        android:name="com.example.testbckg.presentation.auth.signup.SignUpUserBottomSheetFragment"
        tools:layout="@layout/bottom_sheet_dialog_sign_up_user" >
        <action
            android:id="@+id/action_signUpUserBottomSheetFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </dialog>
</navigation>